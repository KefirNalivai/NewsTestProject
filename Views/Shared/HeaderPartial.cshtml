@using Microsoft.AspNetCore.Mvc.Localization

@inject IViewLocalizer Localizer
@{
	int numToCheck = 1;
}
<div id="header-wrapper">
	<div class="container">

		<!-- Header -->
		<header id="header">
			<div class="inner">
				
				<!-- Logo -->
				<h1><a asp-area="" asp-controller="Home" asp-action="Index">@Config.CompanyName</a></h1>

				<!-- Nav -->
				<nav id="nav">
					<ul>
						@while(!Localizer["Menu"+numToCheck.ToString()+"Controller"].IsResourceNotFound)
						{
							<li><a asp-area="" asp-controller='@Localizer["Menu"+numToCheck.ToString()+"Controller"].Value' asp-action='@Localizer["Menu"+numToCheck.ToString()+"Action"].Value'>@Localizer["Menu"+numToCheck.ToString()+"Text"]</a></li>
							numToCheck++;
						}
						
						
					</ul>
				</nav>

			</div>
		</header>

		

	</div>
</div>